/** 
 *  C/C++: g++.exe build active file + all files in workspace
 *  
 */
{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": 
            [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",     //currently-open file's directory
             // "${workspaceFolder}/*.cpp", //current workspace, aka root directory
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}